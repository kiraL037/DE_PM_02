<Window x:Class="AA_Migalkina_PM_02.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AA_Migalkina_PM_02"
        mc:Ignorable="d"
        Title="ManagerWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="254,144,254,143">
            <TextBlock Text="Введите логин"/>
            <TextBox x:Name="txtLogin"/>
            <TextBlock Text="Введите пароль"/>
            <PasswordBox x:Name="txtPassword"/>
            <Button Content="Войти" VerticalAlignment="Top" HorizontalAlignment="Center" Click="InForManager"/>
            
        </StackPanel>
    </Grid>
</Window>
