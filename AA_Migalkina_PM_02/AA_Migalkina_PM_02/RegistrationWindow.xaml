<Window x:Class="AA_Migalkina_PM_02.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AA_Migalkina_PM_02"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="254,70,254,113">
            <TextBlock Text="Логин"/>
            <TextBox x:Name="txtLogin"/>
            <TextBlock Text="Пароль"/>
            <PasswordBox x:Name="txtPassword"/>
            <TextBlock Text="Фамилия"/>
            <TextBox x:Name="txtLastname"/>
            <TextBlock Text="Имя"/>
            <TextBox x:Name="txtFirstname"/>
            <TextBlock Text="Номер телефона"/>
            <TextBox x:Name="txtPhonenumber"/>
            <Button Content="Зарегистрироваться" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="RegistrationUser"/>
            </StackPanel>
    </Grid>
</Window>
